<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UCLStudievejlederApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/statistics.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/UCLStudievejlederApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edituser.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/inquiries.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/midler.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.css"
          rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js" integrity="sha512-d9xgZrVZpmmQlfonhQUvTR7lMPtO7NkZMkA0ABN3PHCbKA5nqylQ/yWlFAyY6hYgdF1Qh6nYiuADWwKB4C2WSw=="
            crossorigin="anonymous"></script>
</head>
<body>
@*    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">UCLStudievejlederApp</a>
*@

    <div id="myNav" class="overlay">
        @*<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times</a>*@
        <div class="close-icon">
            <img class="closebtn" src="~/assets/icons/close.png" alt="Close" onclick="closeNav()" />
        </div>
        <h3>Indstillinger</h3>
        <div class="overlay-content">
            <a asp-controller="User" asp-action="CreateUser">Opret ny bruger</a>
            <a asp-controller="User" asp-action="EditUser">Administrér brugere</a>
            <a asp-controller="Formular" asp-action="EditFormular">Rediger formularindhold</a>
            <a asp-controller="Notification" asp-action="Index">Notifikationer</a>
        </div>
    </div><!-- OVERLAY -->

    <div class="sidebar">
        <a asp-controller="Formular" asp-action="Index"><img class="sidebar-icon border" src="~/assets/icons/pencil.png" /></a>
        <a asp-controller="Statistics" asp-action="Index"><img class="sidebar-icon border" src="~/assets/icons/statistics.png" /></a>
        <a asp-controller="Formular" asp-action="FormularList"><img class="sidebar-icon border" src="~/assets/icons/list.png" /></a>
        <img class="sidebar-icon" src="~/assets/icons/settings.png" onclick="openNav()" />
    </div><!-- SIDE BAR -->

    <div id="bg-blur">

    <header class="nav-header">
        <div class="logo"><img src="~/assets/images/logo-horisontal-mg.svg" alt="UCL Logo"/> </div>
        <div class="right-box">
            <a asp-controller="Formular" asp-action="Index"><img src="~/assets/icons/bell.png" alt="Notifications" title="Notifikationer"/></a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Formular", new { area = "" })">
                    <button type="submit" title="Log ud"><img src="~/assets/icons/right.png" alt="Log out" /></button>
            </form>
        </div>
    </header>
    <div class="master">
        <div class="main-container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    
    <footer class="footer">
        <div class="left-box">
            &copy; @DateTime.Now.Year - University College Lillebælt

        </div>
        <div class="footer-right-box">
                <p>Du er logget ind som @User.Identity?.Name</p>
            <img src="~/assets/images/happyman.png" />
        </div>
    </footer>
    </div><!-- BG BLUR -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.1/mdb.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
